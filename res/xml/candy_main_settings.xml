<PreferenceScreen 
             xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
             android:title="@string/candy_settings_title" >

     <!-- Density Changer -->
	<PreferenceScreen
        android:key="density_changer"
        android:title="@string/lcd_density_title"
        android:fragment="com.android.settings.candy.Density" /> 

     <!-- Lockscreen shortcuts -->
        <PreferenceScreen
        android:key="lockscreen_shortcuts"
        android:fragment="com.android.settings.candy.dslv.ActionListViewSettings"
        android:summary="@string/lockscreen_shortcuts_summary"
        android:title="@string/lockscreen_shortcuts_title">
             <extra android:name="actionMode" android:value="4" />
             <extra android:name="maxAllowedActions" android:value="5" />
             <extra android:name="disableLongpress" android:value="true" />
             <extra android:name="useAppPickerOnly" android:value="true" />
             <extra android:name="fragment" android:value="com.android.settings.candy.fragments.LockscreenShortcutFragment" />
        </PreferenceScreen>

     <!-- Navigationbar height -->
     <ListPreference
             android:key="navigation_bar_height"
             android:dialogTitle="@string/navigation_bar_height"
             android:title="@string/navigation_bar_height"
             android:entries="@array/navigation_bar_height_entries"
             android:entryValues="@array/navigation_bar_height_values"
             android:defaultValue="48"
             android:persistent="false" />

     <!-- Recents Panel -->
     <PreferenceScreen
             android:key="recents_panel"
             android:fragment="com.android.settings.candy.RecentsSettings"
             android:title="@string/Recents_panel" >

     </PreferenceScreen>

     <!-- Status Bar -->  
     <PreferenceScreen
             xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
             android:title="@string/status_bar_title" >

        <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
             android:key="status_bar_brightness_control"
             android:title="@string/status_bar_toggle_brightness"
             android:summary="@string/status_bar_toggle_brightness_summary"
             android:defaultValue="false" />

     <PreferenceScreen
             android:fragment="com.android.settings.candy.StatusBarClockStyle"
             android:key="clock_style_pref"
             android:title="@string/status_bar_clock" />

        <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
             android:key="lock_screen_show_carrier"
             android:title="@string/lockscreen_show_carrier_title"
             android:defaultValue="true" />

     <PreferenceScreen
             android:key="network_traffic_state"
             android:fragment="com.android.settings.candy.NetworkTraffic"
             android:summary="@string/network_traffic_summary"
             android:title="@string/network_traffic_title" />

        <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
             android:key="status_bar_quick_qs_pulldown"
             android:title="@string/status_bar_quick_qs_pulldown_title"
             android:summary="@string/status_bar_quick_qs_pulldown_summary"
             android:defaultValue="true" />

        <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
             android:key="status_bar_show_battery_percent"
             android:title="@string/show_battery_percent_title"
             android:defaultValue="false" />

     </PreferenceScreen>
     
     <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
        android:key="volbtn_music_controls"
        android:title="@string/volbtn_music_controls_title"
        android:summary="@string/volbtn_music_controls_summary"
        android:persistent="false"
        android:defaultValue="true" />

</PreferenceScreen>
